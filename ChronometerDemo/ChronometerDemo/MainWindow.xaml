<Window x:Class="ChronometerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChronometerDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Click="OnPause" Padding="10">Pause</Button>
        <Button DockPanel.Dock="Bottom" Click="OnStart" Padding="10">Start</Button>
        <TextBlock Text="{Binding Chronometer.TotalTime.Value}" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </DockPanel>
</Window>
